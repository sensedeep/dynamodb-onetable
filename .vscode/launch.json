{
    "configurations": [
        {
            "type": "node",
            "name": "JEST",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "cwd": "${workspaceFolder}",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "DDB_CLIENT_VERSION": "v2"
            },
            "args": ["--runInBand", "--watchAll=false", "debug"]
        }
    ]
}
