{
    "configurations": [
        {
            "type": "node",
            "name": "JEST",
            "request": "launch",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true,
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": [
                "--runInBand",
                "--watchAll=false",
                "debug"
            ]
        }
    ]
}
